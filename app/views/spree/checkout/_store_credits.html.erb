<div data-hook="store_credit_cart_form">
	<% if (current_user && current_user.store_credits_total > 0) %>
	<br style='clear:both;' />
	<p><%= t('you_have_store_credit',
	       :amount => number_to_currency(current_user.store_credits_total))%>
	</p>
	<p>
	  <label><%= t('enter_desired_amount_of_store_credit') %></label><br />
	  <%= form.text_field :store_credit_amount, :value => number_with_precision(form.object.store_credit_amount, :strip_insignificant_zeros => true, :locale => :en), :size => 19 %>
	</p>
	<% end %>
</div>